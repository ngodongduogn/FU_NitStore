@model NitStore.Models.Domain.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
</head>
<body style="
      background-image: url('https://images.unsplash.com/photo-1587614382346-4ec70e388b28?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
      background-size: cover;
    ">
    <div class="container-fluid mh-100 d-flex align-items-center justify-content-center"
         style="height: 100vh">
        <div class="w-25 justify-content-center bg-light rounded">
            <div class="m-5">
                <div class="w-50 mx-auto bg-danger rounded text-light text-center"
                     style="margin-bottom: 30px">
                    <h3 class="p-1">NIT Shop</h3>
                </div>
                @using (Html.BeginForm("Login", "Authen", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password"} })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="m-auto text-center form-group">
                        <input type="submit" value="Login" class="btn btn-danger" />
                    </div>
                }
                @if (ViewBag.ErrorMessage != null) {
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                }
                <br />
                @Html.ActionLink("Click here to register", "Register", "Authen", new {}, null)
                
            </div>
        </div>
    </div>
    <footer style="position: fixed; bottom: 0; width: 100%"
            class="align-items-end bg-dark text-center text-white">
        <div class="container p-4">
            <section class="">
                <form action="">
                    <div class="row d-flex justify-content-center"></div>
                </form>
            </section>
            <section class="mb-4">
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Sunt
                    distinctio earum repellat quaerat voluptatibus placeat nam, commodi
                    optio pariatur est quia magnam eum harum corrupti dicta, aliquam
                    sequi voluptate quas.
                </p>
            </section>
        </div>

        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
            © 2020 Copyright:
            <a class="text-white" href="https://mdbootstrap.com/">MDBootstrap.com</a>
        </div>
    </footer>
</body>
</html>
