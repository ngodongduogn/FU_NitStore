<body style="
      background-image: url('https://images.unsplash.com/photo-1587614382346-4ec70e388b28?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80');
      background-size: cover;
    ">
    <div class="container-fluid mh-100 d-flex align-items-center justify-content-center"
         style="height: 100vh">
        <div class="w-25 justify-content-center bg-light rounded">
            <div class="m-5">
                <div class="w-50 mx-auto bg-danger rounded text-light text-center"
                     style="margin-bottom: 30px">
                    <h3 class="p-1">Register</h3>
                </div>
                @using (Html.BeginForm("Register", "Authen", FormMethod.Post,
                new { enctype = "multipart/form-data" }))
                {
                    
                        
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="RePassword" class="control-label"></label>
                        @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="control-label"></label>
                            @Html.CheckBoxFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })  Checked if male
                            @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <div class="m-auto text-center form-group">
                            <input type="submit" value="Register" class="btn btn-danger" />
                        </div>
                    
                }
                <br />
                @Html.ActionLink("Click here to Login", "Login", "Authen", new {}, null)
            </div>
        </div>
    </div>
