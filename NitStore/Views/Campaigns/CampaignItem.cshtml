@model IEnumerable<NitStore.Models.DTO.CampaignItemShowDTO>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "CampaignItem";
    Layout = "~/shared/_LayoutSaleManagers.cshtml";
}
<div class="container">
    <h1>CampaignItem</h1>

    <p>
        <a asp-action="AddNewCampaignItem" asp-route-id="@ViewBag.Campaign.Id">Add new Product to Campaign</a>
    </p>
    <dl class="row">
        <dt class="col-sm-2">
            Campaign Name:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Campaign.Name
        </dd>
        <dt class="col-sm-2">
            Campaign Description:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Campaign.Description
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    Image
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.imageBit)"
                         class="card-img-top" alt="Product Image" />
                    </td>
                    <td>
                        <a asp-action="DeleteCampaignItem" asp-route-id="@item.CampaignItemID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
